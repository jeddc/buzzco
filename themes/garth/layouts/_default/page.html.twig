<!DOCTYPE html>
<html lang="{{ site.language|default('en') }}">
  <head>
{% block head %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
{% include 'partials/metatags.html.twig' %}
    <link rel="stylesheet" href="{{ asset('sass/garth.scss')|minify|url }}">
{% if site.favicon|default(false) %}
    <link rel="shortcut icon" href="{{ url(site.favicon) }}">
{% else %}
    <link rel="shortcut icon" href="{{ url(site.logo|default('')) }}">
{% endif %}
{% endblock head %}
  </head>
  <body>
{% include 'partials/site-header.html.twig' %}
    <main class="main container">
      <div class="content">
{% block content %}
        <article class="page typeset">
          <h1>{{ page.title }}</h1>
          {{- page.content ~}}
        </article>
{% endblock content %}
      </div>
    </main>
{% include 'partials/site-footer.html.twig' %}
    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans:400,400i,700|Neuton:400,700&display=swap" rel="stylesheet">
  </body>
</html>
